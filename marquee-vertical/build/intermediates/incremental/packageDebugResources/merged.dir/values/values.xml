<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeVertical">
        <attr format="dimension|reference" name="mqvTextSize"/>
        <attr format="color|reference" name="mqvTextColor"/>
        <attr format="integer|reference" name="mqvScrollFadeDuration"/>
        <attr format="integer|reference" name="mqvInterval"/>
        <attr name="mqvTextStyle">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="mqvTextGravity">
            <enum name="center" value="0"/>
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>
</resources>