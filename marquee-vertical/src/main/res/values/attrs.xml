<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeVertical">
        <attr name="mqvTextSize" format="dimension|reference"/>
        <attr name="mqvTextColor" format="color|reference"/>
        <attr name="mqvScrollFadeDuration" format="integer|reference"/>
        <attr name="mqvInterval" format="integer|reference"/>
        <attr name="mqvTextStyle">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="mqvTextGravity">
            <enum name="center" value="0"/>
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>
</resources>